<!doctype html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Login | Billionaire Project</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          animation: {
            'float': 'float 6s ease-in-out infinite',
            'pulse-glow': 'pulse-glow 4s cubic-bezier(0.4, 0, 0.6, 1) infinite',
          },
          keyframes: {
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-10px)' },
            },
            'pulse-glow': {
              '0%, 100%': { boxShadow: '0 0 0 0 rgba(234, 179, 8, 0.3)' },
              '50%': { boxShadow: '0 0 20px 10px rgba(234, 179, 8, 0.3)' },
            }
          }
        }
      }
    }
  </script>
  <style>
    .luxury-bg {
      background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    }
    .gold-gradient {
      background: linear-gradient(to right, #fbbf24, #f59e0b, #d97706);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }
    .input-focus-effect:focus {
      box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.3);
    }
  </style>
</head>
<body class="luxury-bg min-h-screen flex items-center justify-center p-4 overflow-hidden">
  <!-- Floating decorative elements -->
  <div class="absolute w-64 h-64 rounded-full bg-amber-500/5 blur-xl top-20 left-20 animate-float"></div>
  <div class="absolute w-72 h-72 rounded-full bg-yellow-500/5 blur-xl bottom-10 right-20 animate-float" style="animation-delay: 2s;"></div>
  
  <form class="relative z-10 w-full max-w-md bg-gray-900/80 backdrop-blur-lg border border-gray-800 rounded-xl shadow-xl overflow-hidden p-8 transition-all duration-300 hover:shadow-2xl" action="/user/login" method="post">
    <!-- Gold accent bar -->
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-amber-400 to-yellow-600"></div>
    
    <h2 class="text-3xl font-bold mb-8 text-center gold-gradient">BILLIONAIRE LOGIN</h2>

    <div class="mb-6">
      <label for="username" class="block mb-3 text-sm font-medium text-gray-300">Username</label>
      <input type="text" name="username" id="username" 
             class="input-focus-effect w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-amber-500 transition-all duration-200" 
             placeholder="Enter your username" 
             required />
    </div>

    <div class="mb-8">
      <label for="password" class="block mb-3 text-sm font-medium text-gray-300">Password</label>
      <input type="password" name="password" id="password" 
             class="input-focus-effect w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-500 focus:outline-none focus:border-amber-500 transition-all duration-200" 
             placeholder="•••••••••" 
             required />
    </div>

    <button type="submit" 
            class="w-full py-3 px-6 bg-gradient-to-r from-amber-500 to-yellow-600 hover:from-amber-600 hover:to-yellow-700 text-white font-bold rounded-lg shadow-lg transition-all duration-300 transform hover:scale-[1.02] animate-pulse-glow">
      ACCESS SECURE PORTAL
    </button>

    <div class="mt-6 text-center">
      <a href="#" class="text-sm text-gray-400 hover:text-amber-400 transition-colors duration-200">Forgot password?</a>
    </div>
  </form>

  <!-- Animated floating particles -->
  <div class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none">
    <div class="absolute w-2 h-2 bg-amber-400/30 rounded-full top-1/4 left-1/5 animate-float" style="animation-delay: 0s;"></div>
    <div class="absolute w-1.5 h-1.5 bg-yellow-500/20 rounded-full top-1/3 right-1/4 animate-float" style="animation-delay: 1.5s;"></div>
    <div class="absolute w-3 h-3 bg-amber-400/40 rounded-full bottom-1/4 left-1/3 animate-float" style="animation-delay: 2.5s;"></div>
  </div>
</body>
</html>
